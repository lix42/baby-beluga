{
  "name": "baby-beluga",
  "version": "0.0.0",
  "description": "A set of function to operate on JSON objects, including actualEqual, deepDiff, deepMerge, etc.",
  "author": "Li Xu <lix42@me.com>",
  "license": "MIT",
  "repository": "git@github.com:lix42/baby-beluga.git",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "json",
    "compare",
    "deep diff",
    "deep merge"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint"
  },
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "ts-jest": "^24.2.0",
    "@types/jest": "^24.0.23",
    "husky": "^3.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
